# Auth Database (Neon PostgreSQL)
AUTH_DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech/auth_db?sslmode=require

# Site URL (used for auth redirects and email links)
SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Resend API Key (for email sending)
RESEND_API_KEY=re_xxxxxxxxxxxxx

# Email sender address
EMAIL_FROM=noreply@yourdomain.com

# Better Auth secret (generate a random string)
BETTER_AUTH_SECRET=your-random-secret-string-here
