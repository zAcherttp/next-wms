    "dev:web": "turbo -F web dev",
    "dev:backend": "turbo -F @tss-wms/backend dev"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "^22.19.1",
    "tsdown": "^0.15.12",
    "turbo": "^2.6.2"
  },
  "packageManager": "pnpm@10.24.0",
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.2",
      "@types/react-dom": "19.2.2"
    }
  }
}
